<div class="panel panel-primary">
 <div class="panel-heading"><%= @event.name %></div>

 <div class="panel-body">

   <p>Name: <%= @event.name %></p>
   <p>Host: <%= @event.user.email %></p>

   <!-- Main Info -->
   <h4>Main Info</h4>
   <p>location: <%= @event.location %></p>
